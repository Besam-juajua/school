.course-item{
  width: 704rpx;
  height: 240rpx;
  margin: 0 26rpx 10rpx 20rpx;
  border: 2rpx solid #BBBBBB;
  box-sizing: border-box;
  position: relative;
}
.course-item image{
  width: 194rpx;
  height: 200rpx;
  margin: 20rpx 20rpx 14rpx 26rpx;
  border: 2rpx solid #BBBBBB;
  box-sizing: border-box;
  border-radius: 10rpx;
  float: left;
}
.course-desc{
  width: 450rpx;
  height: 100%;
  float: left;
  font-size: 28rpx;
}
.course-desc h3{
  display: block;
  font-size: 32rpx;
  margin-top: 28rpx;
  margin-bottom: 48rpx;
  line-height: 44rpx;
}
.course-desc label{
  display: block;
  font-size: 28rpx;
  color: #969999;
  line-height: 40rpx;
  margin-bottom: 6rpx;
}