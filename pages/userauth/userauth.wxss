.user-auth {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
.alert-box {
  width: 540rpx;
  height: 280rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -270rpx;
  margin-top: -160rpx;
}
.content {
  display: block;
  width: 100%;
  height: 180rpx;
  text-align: center;
  background: white;
  padding: 30rpx;
  box-sizing: border-box;
  line-height: 60rpx;
}
.submit {
  width: 100%;
  height: 100rpx;
  background: #8BC34A;
  text-align: center;
  line-height: 100rpx;
  border-radius: 0;
}